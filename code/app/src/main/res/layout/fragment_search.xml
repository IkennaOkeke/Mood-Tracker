<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Search Bar (Fixed at Top) -->
    <LinearLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/search_bar"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_search"
            app:tint="#A1824A" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search for users"
            android:textColor="#000000"
            android:textColorHint="#A1824A"
            android:textSize="16sp"
            android:singleLine="true"
            android:background="@null"
            android:paddingVertical="0dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- RecyclerView (Scrolls independently) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/peopleRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBarContainer"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:layout_marginTop="16dp"
        android:padding="5dp"/>

    <!-- Centered Message When No Search Input -->
    <TextView
        android:id="@+id/noSearchMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="visible"
        android:text="ðŸ‘€\nStart typing to search for users"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#F5F0E5"
        android:lineSpacingExtra="8dp"/>
</RelativeLayout>



