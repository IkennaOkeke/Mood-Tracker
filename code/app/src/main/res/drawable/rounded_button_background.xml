<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E57373"/> <!-- Slightly darker red when pressed -->
            <corners android:radius="24dp"/> <!-- Large radius for very rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/> <!-- Original button color -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>